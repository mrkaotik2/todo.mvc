@model todo.mvc.Models.TodoItem

@{
    ViewData["Title"] = "Create";
}

<h2>Add Todo</h2>

<form asp-action="Create" method="post">
    <!-- the asp-validation-summary tag helper shows validation errors -->
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- added CSS for form -->
    <div class="form-group">
        <label>Title</label>
        <!-- Added CSS class form-control -->
        <input asp-for="Title" class="form-control" />
        <!-- This tag helper is to validate for a specific field -->
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <!-- added CSS class for form group -->
    <div class="form-group">
        <label>Is Complete</label>
        <input asp-for="IsComplete" type="checkbox" />
    </div>
    <!-- Added CSS classes for button-->
    <button type="submit" class="btn btn-primary">Save</button>
</form>
